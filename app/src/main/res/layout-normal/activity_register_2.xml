<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/register_img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:backgroundTint="@color/materialGrey2_Trans"
        android:backgroundTintMode="src_atop"
        android:baselineAligned="false"
        />

    <TextView
        android:id="@+id/register_title"
        android:text="@string/Title_Register"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40px"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        />


    <!--- FIRSTName eingabe: /> -->
    <TextView
        android:id="@+id/f_name_lbl"
        android:layout_width="wrap_content"
        android:text="Firstname"
        android:textColor="@color/TextColorWhite"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_title"
        android:layout_marginLeft="10dp"
        />


    <EditText
        android:id="@+id/register_firstname"
        android:maxLines="1" android:singleLine="true"
        android:layout_width="350dp"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/f_name_lbl"
        android:layout_centerInParent="true"
        />

    <!--- LastName eingabe: /> -->
    <TextView
        android:id="@+id/l_name_lbl"
        android:layout_width="wrap_content"
        android:text="Lastname"
        android:textColor="@color/TextColorWhite"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_firstname"
        android:layout_marginLeft="10dp"
        />


    <EditText
        android:id="@+id/register_lastname"
        android:maxLines="1" android:singleLine="true"
        android:layout_width="350dp"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/l_name_lbl"
        android:layout_centerInParent="true"
        />

    <!--- Email eingabe: /> -->
    <TextView
        android:id="@+id/email_lbl"
        android:layout_width="wrap_content"
        android:text="Email"
        android:textColor="@color/TextColorWhite"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_lastname"
        android:layout_marginLeft="10dp"
        />


    <EditText
        android:id="@+id/register_email"
        android:maxLines="1" android:singleLine="true"
        android:layout_width="350dp"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/email_lbl"
        android:layout_centerInParent="true"
        />

    <!--- PASSWORT eingabe: /> -->
    <TextView
        android:id="@+id/pw_lbl"
        android:layout_width="wrap_content"
        android:text="Password"
        android:textColor="@color/TextColorWhite"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_email"
        android:layout_marginLeft="10dp"
        />


    <EditText
        android:id="@+id/register_password"
        android:maxLines="1" android:singleLine="true"
        android:inputType="textPassword"
        android:layout_width="350dp"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pw_lbl"
        android:layout_centerInParent="true"
        />



    <!--- PASSWORT confirm eingabe: /> -->
    <TextView
        android:id="@+id/pw_confirm_lbl"
        android:layout_width="wrap_content"
        android:text="Confirm password"
        android:textColor="@color/TextColorWhite"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password"
        android:layout_marginLeft="10dp"
        />


    <EditText
        android:id="@+id/register_password_confirm"
        android:maxLines="1" android:singleLine="true"
        android:inputType="textPassword"
        android:layout_width="350dp"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pw_confirm_lbl"
        android:layout_centerInParent="true"
        />



    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_register"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_register"
        android:backgroundTint="@color/materialGrey3"
        android:layout_below="@+id/register_password_confirm"
        android:layout_centerHorizontal="true" />


</RelativeLayout>